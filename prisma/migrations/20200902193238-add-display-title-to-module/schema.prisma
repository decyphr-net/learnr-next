datasource db {
  provider = "mysql"
  url      = "***"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

model Module {
  id          Int      @id @default(autoincrement())
  title       String
  displyTitle String?
  description String
  Lesson      Lesson[]
}

model Lesson {
  id          Int     @id @default(autoincrement())
  title       String
  displyTitle String?
  description String
  module      Module  @relation(fields: [moduleId], references: [id])
  moduleId    Int
}
